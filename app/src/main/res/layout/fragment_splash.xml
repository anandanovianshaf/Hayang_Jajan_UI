<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_splash_gray_bg"
    tools:context=".SplashFragment">

    <ImageView
        android:id="@+id/img_splash_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/subaru_splash_background"
        android:scaleType="centerCrop"
        android:alpha="0.85"
        android:contentDescription="@string/splash_screen_background_character"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_title"
        android:textColor="@color/app_text_dark"
        android:textSize="64sp"
        android:fontFamily="@font/barber_chop_family"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_splash_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_splash_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/splash_subtitle"
        android:textSize="16sp"
        android:fontFamily="@font/komikax_family"
        android:gravity="start"
        android:textColor="@color/app_text_dark"
        android:layout_marginHorizontal="38dp"
        android:shadowColor="#B3FFFFFF"
        android:shadowDx="6"
        android:shadowDy="4"
        android:shadowRadius="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_splash_title" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_gasskeun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_button"
        android:padding="16dp"
        android:textSize="18sp"
        android:backgroundTint="@color/app_pink_primary"
        android:fontFamily="@font/montheavydemo_family"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        android:layout_marginHorizontal="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_splash_subtitle"
        app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>