<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Kartu Header Profil -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profile_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@color/app_profile_header_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_profile_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/subaru_pp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/profile_dummy_name"
                    android:fontFamily="@font/montheavydemo_family"
                    android:textColor="@color/app_text_dark"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@id/img_profile_picture"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_profile_picture" />

                <TextView
                    android:id="@+id/tv_profile_bio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_dummy_bio"
                    android:fontFamily="@font/roboto_bold_italic_family"
                    android:textColor="@color/app_text_dark"
                    android:textSize="16sp"
                    android:justificationMode="inter_word"
                    app:layout_constraintStart_toStartOf="@id/tv_profile_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_profile_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Baris Tombol -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_my_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/profile_my_payment"
            android:fontFamily="@font/coolvetica_rg_family"
            android:textSize="16sp"
            android:backgroundTint="@color/app_profile_payment_btn"
            android:textColor="@color/app_text_dark"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/card_profile_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_edit_profil" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_profil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/profile_edit_profil"
            android:fontFamily="@font/coolvetica_rg_family"
            android:textSize="16sp"
            android:backgroundTint="@color/app_profile_edit_btn"
            android:textColor="@color/app_text_dark"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toTopOf="@id/btn_my_payment"
            app:layout_constraintStart_toEndOf="@id/btn_my_payment"
            app:layout_constraintEnd_toStartOf="@id/btn_notification" />

        <ImageButton
            android:id="@+id/btn_notification"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_notif_bell"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/profile_desc_notif"
            app:layout_constraintTop_toTopOf="@id/btn_my_payment"
            app:layout_constraintBottom_toBottomOf="@id/btn_my_payment"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bagian Saldo -->
        <TextView
            android:id="@+id/tv_saldo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:text="@string/profile_saldo_tersisa"
            android:fontFamily="@font/nasi_goreng_family"
            android:textColor="@color/app_text_dark"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@id/btn_my_payment"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_saldo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/app_profile_saldo_border"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_saldo_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_wallet"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/wallet"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_saldo_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/profile_dummy_saldo"
                    android:fontFamily="@font/montheavydemo_family"
                    android:textColor="@color/app_text_dark"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@id/img_wallet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_wallet" />

                <TextView
                    android:id="@+id/tv_voucher_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_dummy_voucher"
                    android:fontFamily="@font/roboto_bold_family"
                    android:backgroundTint="@color/app_pink_light"
                    android:textColor="@color/app_pink_primary"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tv_saldo_amount"
                    app:layout_constraintTop_toBottomOf="@id/tv_saldo_amount" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bagian Informasi -->
        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:text="@string/profile_informasi_abdi"
            android:fontFamily="@font/nasi_goreng_family"
            android:textColor="@color/app_text_dark"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@id/card_saldo"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_info_abdi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@color/app_profile_info_card_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Baris Alamat -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_alamat_default"
                    android:fontFamily="@font/momo_family"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_alamat_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_dummy_alamat"
                        android:fontFamily="@font/roboto_regular_family"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/arrow_alamat"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageButton
                        android:id="@+id/arrow_alamat"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow_right_white"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/profile_desc_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_profile_info_line"
                    android:alpha="0.5"
                    android:layout_marginVertical="16dp" />

                <!-- Baris No Handphone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_no_handphone"
                    android:fontFamily="@font/momo_family"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_phone_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_dummy_phone"
                        android:fontFamily="@font/roboto_regular_family"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/arrow_handphone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageButton
                        android:id="@+id/arrow_handphone"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow_right_white"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/profile_desc_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_profile_info_line"
                    android:alpha="0.5"
                    android:layout_marginVertical="16dp" />

                <!-- Baris Alamat Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_alamat_email"
                    android:fontFamily="@font/momo_family"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_email_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_dummy_email"
                        android:fontFamily="@font/roboto_regular_family"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/arrow_email"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageButton
                        android:id="@+id/arrow_email"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow_right_white"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/profile_desc_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_profile_info_line"
                    android:alpha="0.5"
                    android:layout_marginVertical="16dp" />

                <!-- Tombol Log Out -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_log_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/profile_log_out"
                    android:fontFamily="@font/montheavydemo_family"
                    android:textStyle="bold"
                    android:backgroundTint="@color/app_profile_logout_btn"
                    android:textColor="@color/white"
                    app:cornerRadius="16dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>