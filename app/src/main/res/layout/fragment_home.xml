<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Baris Welcome -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/app_card_welcome_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/subaru_pp" />

                <TextView
                    android:id="@+id/tv_welcome_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/home_welcome"
                    android:fontFamily="@font/momo_family"
                    android:textStyle="bold"
                    android:textColor="@color/app_text_dark"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/img_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_profile" />

                <TextView
                    android:id="@+id/tv_welcome_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/home_welcome_subtitle"
                    android:fontFamily="@font/montheavydemo_family"
                    android:textColor="@color/app_text_dark"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/tv_welcome_title"
                    app:layout_constraintEnd_toEndOf="@id/tv_welcome_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_welcome_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_search"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxBackgroundColor="@color/app_search_bar_bg"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/ic_search_grey"
        app:startIconTint="@color/app_text_dark"
        app:layout_constraintTop_toBottomOf="@id/card_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_filter">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular_family"
            android:hint="@string/home_search_hint" />

    </com.google.android.material.textfield.TextInputLayout>

        <!-- Tombol Filter -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_filter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:icon="@drawable/ic_filter"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/app_pink_primary"
            app:layout_constraintTop_toTopOf="@id/til_search"
            app:layout_constraintBottom_toBottomOf="@id/til_search"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Judul "Menu Alus" -->
        <TextView
            android:id="@+id/tv_title_menu_alus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/home_menu_alus"
            android:fontFamily="@font/nasi_goreng_family"
            android:textSize="28sp"
            android:textColor="@color/app_text_dark"
            app:layout_constraintTop_toBottomOf="@id/til_search"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Promo Banner -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_promo"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/app_promo_banner_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_menu_alus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_promo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_promo_title"
                    android:fontFamily="@font/momo_family"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_promo_subtitle"/>

                <TextView
                    android:id="@+id/tv_promo_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_promo_subtitle"
                    android:fontFamily="@font/roboto_bold_family"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_promo_title"
                    app:layout_constraintStart_toStartOf="@id/tv_promo_title"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/donut_pink"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="-20dp"
                    android:alpha="0.8"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- RecyclerView untuk "Menu Alus" (Horizontal) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_menu_alus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/card_promo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_menu_alus"
            tools:itemCount="3"/>

        <!-- Judul "Menu Paling Rame" -->
        <TextView
            android:id="@+id/tv_title_menu_rame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/home_menu_rame"
            android:fontFamily="@font/nasi_goreng_family"
            android:textSize="28sp"
            android:textColor="@color/app_text_dark"
            app:layout_constraintTop_toBottomOf="@id/rv_menu_alus"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- RecyclerView untuk "Menu Paling Rame" (Vertikal) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_menu_rame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tv_title_menu_rame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_menu_rame"
            tools:itemCount="2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>