<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddressFragment">

    <!--
      REVISI 1: Tombol 'X' sekarang di pojok kanan atas
    -->
    <ImageButton
        android:id="@+id/btn_close_address"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_close"
        android:background="@drawable/bg_stepper_circle_inactive"
        app:tint="@color/app_stepper_inactive_text"
        android:contentDescription="@string/address_close_button_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--
      REVISI 1: Judul "Alamat Maneh" sekarang di tengah
      dan di bawah tombol 'X' agar tidak tumpang tindih.
    -->
    <TextView
        android:id="@+id/tv_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/address_title"
        android:fontFamily="@font/komikax_family"
        android:textColor="@color/app_text_dark"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/btn_close_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Stepper (Tidak ada perubahan) -->
    <LinearLayout
        android:id="@+id/ll_stepper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_address_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Step 1: My Order (Sudah selesai) -->
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="@string/one"
            android:gravity="center"
            android:background="@drawable/bg_stepper_circle_active"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold_family"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/app_pink_primary"
            android:layout_marginHorizontal="8dp"/>

        <!-- Step 2: Address (Aktif) -->
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="@string/two"
            android:gravity="center"
            android:background="@drawable/bg_stepper_circle_active"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold_family"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/cart_stepper_address"
            android:textColor="@color/app_pink_primary"
            android:fontFamily="@font/montheavydemo_family"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/app_stepper_inactive_bg"
            android:layout_marginHorizontal="8dp"/>

        <!-- Step 3: Payment (Belum) -->
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="@string/three"
            android:gravity="center"
            android:background="@drawable/bg_stepper_circle_inactive"
            android:textColor="@color/app_stepper_inactive_text"
            android:fontFamily="@font/roboto_bold_family"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Tombol Kirim Alamat (Tidak ada perubahan) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_kirim_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="@string/address_button_kirim"
        android:textSize="18sp"
        android:fontFamily="@font/montheavydemo_family"
        android:backgroundTint="@color/app_pink_primary"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--
      REVISI 2: Judul Form sekarang rata kiri
      (Menghapus 'app:layout_constraintEnd_toEndOf="parent"')
    -->
    <TextView
        android:id="@+id/tv_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:text="@string/address_form_title"
        android:fontFamily="@font/nasi_goreng_family"
        android:textColor="@color/app_text_dark"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/ll_stepper"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Form Isian Alamat (Tidak ada perubahan) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_form_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_kirim_alamat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Field Jalan/Nomor Rumah -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_jalan"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/address_hint_jalan">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular_family"
                    android:inputType="textPostalAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Field RT/RW -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_rt_rw"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/address_hint_rt_rw">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular_family"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Field Kelurahan -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_kelurahan"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/address_hint_kelurahan">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular_family"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Field Kecamatan -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_kecamatan"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/address_hint_kecamatan">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular_family"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Field Kota/Kabupaten -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_kota"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/address_hint_kota">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular_family"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Field Kode Pos -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_kode_pos"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/address_hint_kode_pos">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular_family"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
